<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="394.0" prefWidth="348.0" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.lab18.HelloController">
    <TextArea id="txtChat" fx:id="txtChat" editable="false" VBox.vgrow="ALWAYS" />
    <HBox spacing="10.0">
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
        </padding>
        <TextField id="txtMsg" fx:id="txtMsg" onKeyPressed="#onTxtMsgKeyDown" HBox.hgrow="ALWAYS" />
        <Button id="btnSend" fx:id="btnSend" mnemonicParsing="false" onAction="#onBtnSendClicked" text="Send" />
    </HBox>
</VBox>
